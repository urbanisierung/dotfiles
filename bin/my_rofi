#!/usr/bin/env bash

# https://config.phundrak.com/scripts#emoji-picker

transText_org="$@"
transText=$(echo "$@" | sed -e 's/^[[:space:]]*//' -e 's/[[:space:]]*$//')

function translate {
  trans -t en+de -e google "$1"
}

VALUE=$(rofi -dmenu -p "translate")

PARSED_VALUE=$(echo "$VALUE" | sed -e 's/^[[:space:]]*//' -e 's/[[:space:]]*$//')

RESPONSE=$(trans "$PARSED_VALUE")
# PARSED_RESPONSE=$(echo "$RESPONSE" | sed -e 's/^[[:space:]]*//' -e 's/[[:space:]]*$//')
PARSED_RESPONSE=$(echo "$RESPONSE" | sed 's//   /g')

echo "$PARSED_RESPONSE" >text.log

rofi -e "$PARSED_RESPONSE"
